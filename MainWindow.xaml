<Window x:Class="_184863HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_184863HelloWorld"
        mc:Ignorable="d"
        Title="Hello World First Program!" Height="400" Width="400" FontSize="28">
    <StackPanel Orientation="Vertical">
        <Label x:Name="message" Content="Hello World"/>
        <TextBox x:Name="txtName" Text="Enter your name here..."/>
        <Button x:Name="btnGreeting" Content="Click Me" Click="btnGreeting_Click"></Button>
    </StackPanel>
</Window>
